<Window
    x:Class="SnapStep.App.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="SnapStep">

    <Grid Padding="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Orientation="Horizontal" Spacing="8">
            <TextBlock Text="SnapStep" FontSize="20" FontWeight="SemiBold"/>
            <Border Margin="8,0,0,0" Padding="6,2" Background="#222" CornerRadius="6">
                <TextBlock x:Name="SessionLabel" Text="No session"/>
            </Border>
        </StackPanel>

        <!-- Body -->
        <StackPanel Grid.Row="2" Spacing="10">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button x:Name="BtnStart" Click="BtnStart_Click" Content="Start Capture"/>
                <Button x:Name="BtnPause" Click="BtnPause_Click" Content="Pause Capture" IsEnabled="False"/>
                <ComboBox x:Name="DpiBox" Width="100">
                    <ComboBoxItem Content="100 dpi"/>
                    <ComboBoxItem Content="150 dpi"/>
                    <ComboBoxItem Content="200 dpi"/>
                    <ComboBoxItem Content="300 dpi"/>
                </ComboBox>
                <Button x:Name="BtnSettings" Content="Settings" Click="BtnSettings_Click"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button x:Name="BtnImport" Content="Add Image(s)" Click="BtnImport_Click" IsEnabled="False"/>
                <Button x:Name="BtnComplete" Content="Complete Capture" Click="BtnComplete_Click" IsEnabled="False"/>
            </StackPanel>

            <TextBlock TextWrapping="Wrap" Opacity="0.8"
                 Text="Click anywhere after Start to capture a quarter-screen region around the cursor. Notes appear above each image in the browser editor."/>
        </StackPanel>
    </Grid>
</Window>
